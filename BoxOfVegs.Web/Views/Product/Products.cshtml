

@{
    ViewBag.Title = "Products";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Products</h2>

<div class="container-fluid">

    <!-- Breadcrumbs-->
    <ol class="breadcrumb">
        <li class="breadcrumb-item">
            <a href="../Admin">Dashboard</a>
        </li>
        <li class="breadcrumb-item active">Products</li>
    </ol>

    <!-- DataTables Example -->
    <div class="card mb-3">
        <div class="card-header">
            <i class="fas fa-table"></i>
            Product Details
            <a href="../Product/AddProduct" class="btn btn-info fa-pull-right fa fa-plus">Add New</a>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                    <thead>
                        <tr>
                            <th>Sr. No.</th>
                            <th>Product Name</th>
                            <th>Action</th>

                        </tr>
                    </thead>
                   
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@(Model.IndexOf(item) + 1)</td>
                                <td>@item.ProductName</td>
                                <td>
                                    <div class="row">
                                        <div class="col-auto ">
                                            <div class="btn btn-link">
                                                @Html.ActionLink("Edit", "EditProduct", new { productID = item.ProductID })
                                                


                                            </div>
                                        </div>
                                        <div class="col-auto">
                                            <div class="btn btn-link">
                                                @Html.ActionLink("Delete", "DeleteProduct", new { productID = item.ProductID })
                                            </div>

                                        </div>
                                    </div>
                                </td>


                            </tr>
                        }

                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>