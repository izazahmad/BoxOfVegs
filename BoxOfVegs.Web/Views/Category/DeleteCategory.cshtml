@model BoxOfVegs.Entities.Category

@{
    ViewBag.Title = "DeleteCategory";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";


}

<div class="container-fluid">

    <ol class="breadcrumb">

        <li class="breadcrumb-item"><a href="@Url.Action("Index","Category")">Categories</a></li>
        <li class="breadcrumb-item active">Delete Category</li>
    </ol>

    <div class="card mb-3">
        <div class="card-header">
            <i class="fas fa-table"></i>
            Delete Category
        </div>
        <div class="card-body">

            <h3>Are you sure you want to delete this Category ?</h3>
            <br />
            <h5 style="color:red">If you delete this category then it will delete products as well which are belong to this Category.</h5>
            <br />
            <h4>Category Name: @Model.CategoryName</h4>
            <br />
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()
                @Html.HiddenFor(m => m.CategoryID)
                <div class="row">


                    <div class="col-auto">
                        <button type="button" onclick="location.href='@Url.Action("Index","Category")'">Cancel</button>
                    </div>
                    <div class="col-auto ">

                        <button type="submit">Yes Delete</button>

                    </div>
                </div>
            }
          
        </div>
    </div>
</div>