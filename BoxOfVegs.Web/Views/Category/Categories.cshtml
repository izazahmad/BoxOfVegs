<div>

	 @*Breadcrumbs
	<ol class="breadcrumb">
		<li class="breadcrumb-item">
			<a href="../Admin">Dashboard</a>
		</li>
		<li class="breadcrumb-item active">Categories</li>
	</ol>*@

	<!-- DataTables Example -->

	<div class="card-header">
		<i class="fas fa-table"></i>
		Category Details
		<a href="../Admin/AddCategory" class="btn btn-info fa-pull-right fa fa-plus">Add New</a>
	</div>
	<form method="post">
		<input type="text" name="search" value="@Model.Searching" id="searchTxt" class="form-control" />
		<button type="button" id="searchBtn">Search</button>
	</form>
	<div>
		<table class="table table-bordered" @*id="dataTable" width="100%" cellspacing="0"*@>
			<thead>
				<tr>
					<th>Sr. No.</th>
					<th>Category Name</th>
					<th>Products</th>
					<th>Action</th>

				</tr>
			</thead>
			@*<tfoot>
				<tr>`
					<th>Sr. No.</th>
					<th>Category Name</th>
					<th>Products</th>
					<th>Action</th>
				</tr>
			</tfoot>*@
			<tbody>
				@if (Model.category != null && Model.category.Count > 0)
				{

					foreach (var item in Model.category)
					{
						<tr>
							<td>@(Model.category.IndexOf(item) + 1)</td>
							<td>@item.CategoryName</td>

							<td>
								@item.Products.Count
							</td>

							<td>
								<div class="row">
									<div class="col-auto ">
										<div class="btn btn-outline-primary">
											@Html.ActionLink("Edit", "UpdateCategory", new { categoryID = item.CategoryID })


										</div>
									</div>
									<div class="col-auto">
										<div class="btn btn-outline-primary">
											<button class="deleteBtn" data-id="@item.CategoryID">Delete</button>
										</div>

									</div>
								</div>
							</td>


						</tr>
					}
				}
				else
				{


					<tr><td colspan="3" class="text-danger">No Categories found.</td></tr>
				}

			</tbody>
		</table>
	</div>
	

		@* </div> *@
		@*<div class="container">
		@Html.PagedListPager(Model.ListOfCategory, page => Url.Action("Categories", new { page, search = Request.QueryString["search"] }), new PagedListRenderOptions() { Display = PagedListDisplayMode.IfNeeded})*@
		@* @Html.PagedListPager(Model.ListOfCategory, page => Url.Action("Categories", new { page, search = Request.QueryString["search"] }), new PagedListRenderOptions() { Display = PagedListDisplayMode.IfNeeded, DelimiterBetweenPageNumbers="|" })*@
		@* @Html.PagedListPager(Model.ListOfCategory, page => Url.Action("Categories", new { page, search = Request.QueryString["search"] }), new PagedListRenderOptions() { FunctionToDisplayEachPageNumber = page => ((page - 1) * 5).ToString() + "-" + (((page - 1) * 5) + 5).ToString()})*@
		@*</div>*@


		<div>
			@if (Model.Pager != null && Model.Pager.TotalPages > 1)
			{

				if (Model.Pager.CurrentPage > 1)
				{
					<button class="pageButtons" data-pageno="1">First</button>
					<button class="pageButtons" data-pageno="@(Model.Pager.CurrentPage - 1)">Previous</button>
				}

				for (var page = Model.Pager.StartPage; page <= Model.Pager.EndPage; page++)
				{
					string activeClass = Model.Pager.CurrentPage == page ? "active bg-info" : string.Empty;

					<button class="@activeClass pageButtons" data-pageno="@page">@page</button>
				}

				if (Model.Pager.CurrentPage < Model.Pager.TotalPages)
				{
					<button class="pageButtons" data-pageno="@(Model.Pager.CurrentPage + 1)">Next</button>
					<button class="pageButtons" data-pageno="@Model.Pager.EndPage">Last</button>
				}
			}
		</div>

	</div>

