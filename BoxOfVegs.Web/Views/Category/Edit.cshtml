@model BoxOfVegs.Entities.Category
@{
    ViewBag.Title = "Edit";
}

<h2>Edit Category</h2>

<form method="post">
    <input type="hidden" name="Id" value="@Model.CategoryID" />
    <label>Name</label>
    <input name="Name" value="@Model.CategoryName" />
    <br />
    <label>Description</label>
    <input name="Description" value="@Model.Description"/>
    <br />
    <button type="submit">Edit</button>
</form>
