@model BoxOfVegs.Entities.User

@{
    ViewBag.Title = "Login";
}




    <!-- End breadcrumb-->
    <div class="account">
        <div class="container">
            <div class="row">
                <div class="col-12 col-md-6 mx-auto">
                    <h1 class="title">Login</h1>
                    @using (Html.BeginForm())
                    {
                        @Html.AntiForgeryToken()
                        <label for="user-name">Username</label>
                        @Html.EditorFor(model => model.UserName, new { htmlAttributes = new { @class = "no-round-input" } })

                        <label for="password">Password </label>
                        @Html.EditorFor(model => model.Password, new { htmlAttributes = new { @class = "no-round-input" } })


                        <div class="account-method">
                            <div class="account-forgot">
                                <a href="#">Forget your Password</a>
                            </div>
                        </div>

                            <div class="account-function">
                                <button class="no-round-btn">Sign in</button>

                                <a class="create-account" href="@Url.Action("Register", "User")">Or create an account</a>
                            </div>
                            }
                        </div>
                    </div>
        </div>
    </div>

    <!-- End account-->
