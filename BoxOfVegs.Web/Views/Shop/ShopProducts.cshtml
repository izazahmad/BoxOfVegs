@model  ShopProductViewModel


@{ var imageURL = "placeholder-image.png"; }

<!-- End breadcrumb-->
<div class="shop-layout">
    <div class="container">
        <div class="row">
            <div class="col-xl-3">
                <div class="shop-sidebar">
                    <button class="no-round-btn" id="filter-sidebar--closebtn">Close sidebar</button>
                    <div class="shop-sidebar_department">
                        <div class="department_top mini-tab-title underline">
                            <h2 class="title">Departments</h2>
                        </div>
                        <div class="department_bottom">
                            @foreach (var item in Model.ShopCategories)
                            {

                                <a class="department-link filterLink @(Model.CategoryID.HasValue && Model.CategoryID.Value == item.CategoryID ? "active" : string.Empty)" href="@Url.Action("Index", "Shop", new { categoryID = item.CategoryID, sortBy = Model.SortBy })">@item.CategoryName</a>
                                <br />

                            }
                        </div>
                    </div>
                    <div class="shop-sidebar_department">
                        <div class="price-filter_top mini-tab-title underline">
                            <h2 class="title">Filter By</h2>
                        </div>
                        <div class="department_bottom">


                            <a href="@Url.Action("Index", "Shop", new { sortBy=1, categoryID = Model.CategoryID })" class=" department-link filterLink @(Model.SortBy.HasValue ? Model.SortBy.Value == 1 ? "active" : string.Empty : string.Empty)">Newest First</a>
                            <br />
                            <a href="@Url.Action("Index", "Shop", new { sortBy=2, categoryID = Model.CategoryID })" class=" department-link filterLink @(Model.SortBy.HasValue ? Model.SortBy.Value == 2 ? "active" : string.Empty : string.Empty)">Price: low to high</a>
                            <br />
                            <a href="@Url.Action("Index", "Shop", new { sortBy=3, categoryID = Model.CategoryID  })" class="department-link filterLink @(Model.SortBy.HasValue ? Model.SortBy.Value == 3  ? "active" : string.Empty : string.Empty)">Price: high to low</a>
                            <br />
                        </div>

                        @*<div class="price-filter_bottom">
                                <p>
                                    <label for="amount">Price range:</label>
                                    <div class="filter-group">
                                        <input id="amount" type="text" readonly="">
                                        <button class="normal-btn">Fiter</button>
                                    </div>
                                </p>
                                <div id="slider-range"></div>
                            </div>*@
                    </div>

                </div>
                <div class="filter-sidebar--background" style="display: none"></div>
            </div>
            <div class="col-xl-9">
                <div class="shop-grid-list">
                    <div class="shop-products">
                        <div class="shop-products_top mini-tab-title underline">
                            <div class="row align-items-center">
                                <div class="col-6 col-xl-4">
                                    <h2 class="title">Shop</h2>
                                </div>
                                <div class="col-6 text-right">
                                    <div id="show-filter-sidebar">
                                        <h5> <i class="fas fa-bars"></i>Show sidebar</h5>
                                    </div>
                                </div>
                                <div class="col-12 col-xl-8">
                                    <div class="product-option">
                                        <div class="product-filter">
                                            <select class="select-form" id="sort" name="">
                                                <option value="A-Z">A to Z</option>
                                                <option value="Z-A">Z to A</option>
                                                <option value="High to low price">High to low price</option>
                                                <option value="Low to height price">Low to height</option>
                                            </select>
                                            <select class="select-form" id="sort" name="">
                                                <option value="A-Z">Show 10</option>
                                                <option value="Z-A">Show 20</option>
                                                <option value="High to low price">Show 30</option>
                                            </select>
                                        </div>
                                        <div class="view-method">
                                            <p class="active" id="grid-view"><i class="fas fa-th-large"></i></p>
                                            <p id="list-view"><i class="fas fa-list"></i></p>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <!--Using column-->
                        </div>
                        <div class="shop-products_bottom">
                            <div class="row no-gutters-sm">
                                @foreach (var item in Model.ShopProducts)
                                {
                                    var imageUrl = string.IsNullOrEmpty(item.ImageUrl) ? imageURL : item.ImageUrl;

                                    <div class="col-6 col-md-4">
                                        <div class="product">
                                            <div class="product-img_block">
                                                <a class="product-img" href="@Url.Action("ProductDetails", "Product", new { productId = item.ProductID })"><img src="~/Content/images/product/@imageUrl" alt=""></a>
                                                <button class="quickview no-round-btn smooth">Quick view</button>
                                            </div>
                                            <div class="product-info_block">
                                                <h5 class="product-type">@item.Category.CategoryName</h5>
                                                <a class="product-name">@item.ProductName</a>
                                                <h3 class="product-price">
                                                    £ @item.Price
                                                </h3>
                                                <h5 class="product-rated"><i class="icon_star"></i><i class="icon_star"></i><i class="icon_star"></i><i class="icon_star"></i><i class="icon_star-half"></i><span>(5)</span></h5>
                                                <p class="product-describe">@item.Description</p>
                                                <h5 class="product-avaiable">Avability: <span>@item.Quantity In stock</span></h5>
                                                <button class="add-to-wishlist button-borderless"><i class="icon_heart_alt"></i></button>
                                            </div>
                                            <div class="product-select">
                                                <button class="add-to-wishlist round-icon-btn"> <i class="icon_heart_alt"></i></button>
                                                <button class="add-to-cart round-icon-btn">  <i class="icon_bag_alt"></i></button>
                                                <button class="add-to-compare round-icon-btn"> <i class="fas fa-random"></i></button>
                                                <button class="quickview round-icon-btn"> <i class="far fa-eye"></i></button>
                                            </div>
                                            @*<div class="product-select_list">
                                                    <p class="delivery-status">Free delivery</p>
                                                    <h3 class="product-price">
                                                        <del>$35.00</del>$14.00
                                                    </h3>
                                                    <button class="add-to-cart normal-btn outline">Add to Cart</button>
                                                    <button class="add-to-compare normal-btn outline">+ Add to Compare</button>
                                                </div>*@
                                        </div>
                                    </div>
                                }

                            </div>
                        </div>
                        <div class="shop-pagination">
                            <ul>
                                <li>
                                    <button class="no-round-btn smooth active">1</button>
                                </li>
                                <li>
                                    <button class="no-round-btn smooth">2</button>
                                </li>
                                <li>
                                    <button class="no-round-btn smooth">3</button>
                                </li>
                                <li>
                                    <button class="no-round-btn smooth"> <i class="arrow_carrot-2right"></i></button>
                                </li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- End shop layout-->
<script>
    $(".filterLink").click(function () {
        var url = $(this).attr("data-href");

        if (url != "" || url != undefined) {
            GetData(url);
        }
    });
</script>


